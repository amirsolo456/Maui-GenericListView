<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🔷 Style برای Expander Header -->
    <Style x:Key="ExpanderHeaderStyles" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource MyLightGray}" />
        <Setter Property="Stroke" Value="{StaticResource MyGray}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
    